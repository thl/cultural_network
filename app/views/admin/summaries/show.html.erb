<% add_breadcrumb_item feature_link(object.feature)
   add_breadcrumb_item link_to(Summary.model_name.human(:count => :many).s, admin_feature_summaries_path(object.feature))
   add_breadcrumb_item object.id %>
<p id="notice"><%= notice %></p>
<br class="clear"/>
<section class="panel panel-content">
  <div class="panel-heading">
    <h6><%= "#{Summary.model_name.human.titleize.s} #{edit_item_link object}".html_safe %></h6>
  </div>
  <div class="panel-body">
<fieldset>
  <span class='by'><%= ' by ' %></span>
  <span class='content_by'><%= object.author.fullname %></span>
  <div class="row">
    <span><%= def_if_blank(object, :content).html_safe %></span>
  </div>
  <div class="row">
    <label><%= Language.model_name.human.titleize.s %></label>
    <span><%= def_if_blank(object, :language, :name) %></span>
  </div>
</fieldset>
  </div> <!-- END panel-body -->
</section> <!-- END panel -->
<section class="panel panel-default">
    <div class="panel-heading">
      <h6><a href="#collapseTwo" data-toggle="collapse" data-parent="#accordion" class="accordion-toggle collapsed"><span class="glyphicon glyphicon-plus"></span><%= ts 'Citations' %></a></h6>
    </div>
    <div id="collapseTwo" class="panel-collapse collapse">
      <div class="panel-body">
<%= citation_list_fieldset %>
    </div> <!-- END panel-body -->
  </div> <!-- END collapseTwo -->
</section> <!-- END panel -->
