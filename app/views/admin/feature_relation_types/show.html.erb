<% add_breadcrumb_item link_to(FeatureRelationType.model_name.human(:count => :many).s, admin_feature_relation_types_path)
   add_breadcrumb_item object.id %>
<section class="panel panel-content">
  <div class="panel-heading">
    <h6><%= FeatureRelationType.model_name.human.titleize.s %><%= edit_item_link object %></h6> 
  </div>
  <div class="panel-body">
<fieldset>
  <div class="row">
    <label><%= FeatureRelationType.human_attribute_name(:is_hierarchical).s %></label>
    <span><%= object.is_hierarchical ? ts(:affirmation) : ts(:negation) %></span>
  </div>
  <div class="row">
    <label><%= FeatureRelationType.human_attribute_name(:is_symmetric).s %></label>
    <span><%= object.is_symmetric ? ts(:affirmation) : ts(:negation) %></span>
  </div>
  <div class="row">
    <label><%= FeatureRelationType.human_attribute_name(:label).s %></label>
    <span><%= object.label %></span>
  </div>
<% unless object.is_symmetric %>
   <div class="row">
     <label><%= FeatureRelationType.human_attribute_name(:asymmetric_label).s %></label>
     <span><%= object.asymmetric_label %></span>
   </div>
<% end %>
  <div class="row">
    <label><%= FeatureRelationType.human_attribute_name(:code).s %></label>
    <span><%= object.code %></span>
  </div>
  <div class="row">
    <label><%= FeatureRelationType.human_attribute_name(:asymmetric_code).s %></label>
    <span><%= object.asymmetric_code %></span>
  </div>  
</fieldset>
  </div> <!-- END panel-body -->
</section> <!-- END panel -->
