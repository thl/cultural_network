<% if object.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(object.errors.count, "error") %> prohibited this relation type from being saved:</h2>
    <ul>
    <% object.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<fieldset>
  <div class="row">
<%= f.check_box :is_hierarchical %>
<%= f.label(:is_hierarchical).s %>
  </div>
  <div class="row">
<%= f.check_box :is_symmetric, onchange: "$(this).is(':checked') ? $('#asymmetric_label').hide() : $('#asymmetric_label').show()" %>
<%= f.label(:is_symmetric).s %>
  </div>
  <div class="row">
<%= f.label(:label).s %>
<%= f.text_field :label, class: [:text, 'text-full form-control form-text'] %>
  </div>
  <div class="row" id="asymmetric_label" <%= 'style="display:none;"' if object.is_symmetric %>>
<%= f.label(:asymmetric_label).s %>
<%= f.text_field :asymmetric_label, class: [:text, 'text-full form-control form-text'] %>
  </div>
  <div class="row">
<%= f.label(:code).s %>
<%= f.text_field :code, class: [:text, 'text-full form-control form-text'] %>
  </div>
  <div class="row">
<%= f.label(:asymmetric_code).s %>
<%= f.text_field :asymmetric_code, class: [:text, 'text-full form-control form-text'] %>
  </div>
</fieldset>
