<% add_breadcrumb_item features_link
   add_breadcrumb_item feature_link(@object.feature)
   add_breadcrumb_item link_to(Caption.model_name.human(count: :many).s, admin_feature_captions_path(@object.feature))
   add_breadcrumb_item link_to(@object.id, object_path)
   add_breadcrumb_item ts('edit.this') %>
<div>
<h1><%= ts 'edit.ing.record', what: "#{Caption.model_name.human.titleize} #{@object.id}" %></h1>
</div>
<br class="clear"/>
<%= form_for [:admin, @object.feature, @object] do |f| %>
<%=  render partial: 'form_fields', locals: {f: f} %>
     <p><%=  link_to ts('cancel.this'), admin_feature_caption_path(parent_object,@object), class: 'btn btn-primary form-submit', id: 'edit-cancel' %> | <%= globalized_submit_tag 'update.this', class: 'btn btn-primary form-submit' %></p>
<% end %>