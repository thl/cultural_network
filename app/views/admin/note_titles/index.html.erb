<% add_breadcrumb_item NoteTitle.model_name.human(:count => :many).s %>
<div>
    <div class="left">
<%=   resource_search_form %>
    </div>
<%= highlighted_new_item_link [:note_title], nil, :align => 'right' %>
</div>
<br class="clear"/>
<section class="panel panel-content">
  <div class="panel-heading">
    <h6><%= NoteTitle.model_name.human.pluralize.s %></h6>
  </div>
  <div class="panel-body">
<% if @collection.empty? %>
<%=  empty_collection_message %>
<% else %>
   <table class="listGrid">
<%=  pagination_row :colspan=>3 %>
     <tr>
       <th class="listActionCol"></th>
       <th><%= NoteTitle.model_name.human.titleize.s %></th>
     </tr>
<%   @collection.each do |item| %>
     <tr>
       <td class="listActionsCol"><%= list_actions_for_item(item) %></td>
       <td><%= item.title %></td>
     </tr>
<%   end %>
   </table>
<% end %>
  </div> <!-- END panel-body -->
</section> <!-- END panel -->
