<% # if we're showing the descriptions of a particular Feature
   if parent_object
     add_breadcrumb_item feature_link(parent_object)
     add_breadcrumb_item Description.model_name.human(:count => :many).s
   end %>
<div>
  <div class="left"></div>
  <div class="right highlight">
<% unless @locating_relation
     if parent? %>
<%=    ts :for, :what => new_item_link([parent_object, :description]), :whom => feature_link(parent_object) %>
<%   else %>
<%=    ts 'snippet.essay_needs_parent' %>
<%   end
   end
   if !parent_object.nil? && !parent_object.descriptions.nil? %>
<%=  link_to ts(:set_primary_essay), set_primary_description_admin_feature_path(parent_object.fid) %>
<% end %>
  </div>
</div>
<br class="clear"/>
<br class="clear"/>
<section class="panel panel-content">
  <div class="panel-heading">
    <h6><%= Description.model_name.human.titleize.s %></h6>
  </div>
  <div class="panel-body">
<%= render :partial => 'descriptions_list', :locals => { :list => @collection } %>
  </div> <!-- END panel-body -->
</section> <!-- END panel -->
