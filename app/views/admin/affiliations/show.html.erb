<% add_breadcrumb_item features_link
   add_breadcrumb_item feature_link(object.feature)
   add_breadcrumb_item link_to(Affiliation.model_name.human(:count => :many).s, admin_feature_affiliations_path(object.feature))
   add_breadcrumb_item object.id %>
<p id="notice"><%= notice %></p>
<br class="clear"/>
<section class="panel panel-content">
  <div class="panel-heading">
    <h6><%= Affiliation.model_name.human.titleize.s %><%= edit_item_link @blurb %></h6>
  </div>
  <div class="panel-body">
<fieldset>
  <div class="row">
    <span><%= def_if_blank(object, :collection, :name).html_safe %></span>
  </div>
  <div class="row">
    <label>Include descendants</label>
    <span><%= object.descendants? ? 'Yes' : 'No' %></span>
  </div>
</fieldset>
  </div> <!-- END panel-body -->
</section> <!-- END panel -->
