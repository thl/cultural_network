<%  add_breadcrumb_item link_to(object.feature.fid, admin_feature_path(object.feature.fid))
    add_breadcrumb_item link_to(FeatureName.model_name.human(count: :many).s, admin_feature_feature_names_path(object.feature))
    add_breadcrumb_item link_to(object.child_node.id, admin_feature_name_path(object.child_node))
    add_breadcrumb_item link_to(FeatureNameRelation.model_name.human(count: :many).s, admin_feature_name_feature_name_relations_path(object.child_node))
    add_breadcrumb_item link_to(object.parent_node.id, admin_feature_name_relation_path(object))
    add_breadcrumb_item ts('edit.this') %>
<section class="panel panel-content">
  <div class="panel-heading">
    <h6><%= FeatureNameRelation.model_name.human.titleize.s %></h6>
  </div>
  <div class="panel-body">
<%= form_for object, url: admin_feature_name_relation_path(object), method: :put do |f| %>
<%#=  f.hidden_field :child_node_id, :value=>params[:feature_name_id] %>
<%#=  f.hidden_field :parent_node_id, :value=>params[:target_id] %>
<%=   render partial: 'form_fields', locals: {f: f} %>
<%=   link_to ts('cancel.this'), admin_feature_name_relation_path(object), class: 'btn btn-primary form-submit', id: 'edit-cancel' %> | <strong><%= globalized_submit_tag 'update.this', class: 'btn btn-primary form-submit' %></strong>
<%  end %>
  </div> <!-- END panel-body -->
</section> <!-- END panel -->
