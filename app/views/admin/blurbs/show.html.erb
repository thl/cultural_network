<% add_breadcrumb_item link_to(Blurb.model_name.human(:count => :many).s, collection_path)
   add_breadcrumb_item @blurb.id %>
<section class="panel panel-content">
  <div class="panel-heading">
    <h6><%= Blurb.model_name.human.titleize.s %><%= edit_item_link @blurb %></h6>
  </div>
  <div class="panel-body">
<fieldset>
  <div class="row">
    <label><%= Blurb.human_attribute_name(:title).s %></label>
    <span><%= def_if_blank(@blurb, :title) %></span>
  </div>
  <div class="row">
    <label><%= Blurb.human_attribute_name(:code).s %></label>
    <span><%= def_if_blank @blurb, :code %></span>
  </div>
  <div class="row">
    <label><%= Blurb.human_attribute_name(:content).s %></label>
    <span><%= def_if_blank(@blurb, :content).html_safe %></span>
  </div>	
</fieldset>
  </div> <!-- END panel-body -->
</section> <!-- END panel -->
