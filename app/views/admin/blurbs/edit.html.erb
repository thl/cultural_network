<%  add_breadcrumb_item link_to(Blurb.model_name.human(count: :many).s, collection_path)
    add_breadcrumb_item link_to(@blurb.id, object_path(@blurb))
    add_breadcrumb_item ts('edit.this') %>
<section class="panel panel-content">
  <div class="panel-heading">
    <h6><%= Blurb.model_name.human.titleize.s %></h6>
  </div>
  <div class="panel-body">
<%= form_for [:admin, @blurb] do |f| %>
<%=   render partial: 'admin/blurbs/form_fields', locals: {f: f, object: @blurb} %>
<%=   link_to ts('cancel.this'), collection_path, class: 'btn btn-primary form-submit', id: 'edit-cancel' %> | <%= globalized_submit_tag 'update.this', class: 'btn btn-primary form-submit' %>
<%  end %>
  </div> <!-- END panel-body -->
</section> <!-- END panel -->
