<% add_breadcrumb_item link_to(Perspective.model_name.human(:count => :many).s, collection_path)
   add_breadcrumb_item object.id %>
<section class="panel panel-content">
  <div class="panel-heading">
    <h6><%= Perspective.model_name.human.titleize.s %><%= edit_item_link object %></h6>
  </div>
  <div class="panel-body">
<fieldset>
  <div class="row">
    <label><%= Perspective.human_attribute_name(:name).s %></label>
    <span><%= def_if_blank(object, :name) %></span>
  </div>
  <div class="row">
    <label><%= Perspective.human_attribute_name(:code).s %></label>
    <span><%= def_if_blank object, :code %></span>
  </div>
  <div class="row">
    <label><%= Perspective.human_attribute_name(:description).s %></label>
    <span><%= def_if_blank(object, :description).html_safe %></span>
  </div>
  <div class="row">
    <label><%= Perspective.human_attribute_name(:is_public).s %></label>
    <span><%= object.is_public? ? ts(:affirmation) : ts(:negation) %></span>
  </div>
</fieldset>
  </div> <!-- END panel-body -->
</section> <!-- END panel -->
